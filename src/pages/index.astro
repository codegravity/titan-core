---
import Layout from '@layouts/Layout.astro';
import { ClientRouter, fade, slide } from 'astro:transitions';
import Hero from '@components/sections/Hero.astro';
//import GoogleMap from '@components/sections/heroMap.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/newy.jpg';
import styleGuideImage from '../assets/images/home/ll-winter1.jpg';

import SwiperHero from '@components/sections/SwiperHero.astro';
import swiperImage1 from '../assets/images/home/newy.jpg';
import swiperImage2 from '../assets/images/home/IMG_5183-scaled.jpg';
import swiperImage3 from '../assets/images/home/skutan-gondolen1.jpg';
import swiperImage4 from '../assets/images/home/ll-summer3.jpg';


const seoTitle = "Åreskutan.se, boende och aktivititer i Åre";
const seoDescription = "Boende och adventure i centralt Åre.";

const heroContent = {
    title: 'Boende och Aktiviteter i Åre',
    description: 'Nara till alt.',
    buttons: [
        {
            text: 'Boende',
            link: '/boende',
            target: '_self'
        },
        {
            text: 'Aktiviteter',
            link: '/aktiviteter',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const swiperHeroContent = {
    title: 'Boende och Aktiviteter i Åre',
    description: 'Nara till alt.',
    buttons: [
        {
            text: 'Boende',
            link: '/boende',
            target: '_self'
        },
        {
            text: 'Aktiviteter',
            link: '/aktiviteter',
            target: '_self'
        },
        {
            text: 'FAQ',
            link: '#faq',
            target: '_self'
        }
    ],
    swiperImages: [
        { swiperBackgroundImage: swiperImage1 },
        { swiperBackgroundImage: swiperImage2 },
        { swiperBackgroundImage: swiperImage3 },
        { swiperBackgroundImage: swiperImage4 }
    ],
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "Alt du behöver i narhet.",
    title: "Härligt boende i Åre",
    description: "Vi erbjuder boende i Åre året runt.  Bra boenden för dig, dina vänner och din familj i Åre. Vill du spendera några dagar eller veckor i en anrik fjällby som erbjuder ett gediget utbud av såväl skidåkning, shopping som restauranger och barer?  Kanske känner du till och med igen skidbackarna och vyerna från många världscupstävlingar eller internationella resemagasin. Vi erbjuder modernt, bekvämt och centralt boende i Åre. Alla säsonger och årstider har sin tjusning – därför har vi öppet året runt. Vintertid är skidåkning i fokus, medans sommaren erbjuder cykling, vandring, fiske och skärmflygning.",
    features: featureLists.main.features,
    button: {
        text: "Mer om våran boende",
        link: "/boende",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Join The Community",
    title: ' Start Building With Titan Core Today',
    description: 'Titan Core is open-source and constantly improving. Join our community of developers to contribute, get support, or showcase what you\'ve built.',
    hideCta: false,
    button: {
        text: 'Download Titan Core',
        link: 'https://github.com/rspisarski/titan-core',
        target: '_blank'
    }
}

const boendeIntroSection = {
    eyebrow: "3 lokal i byn, för alla behöv.",
    headline: "Boende i Åre",
    description: "Välkommen till Åreskutan, där vi erbjuder året-runt-boende mitt i Åre. Här finns något för alla – vare sig du vill njuta av skidåkning, shopping, restaurangbesök eller bara komma nära naturen. Våra moderna och bekväma boenden ligger centralt, vilket gör att du kan njuta av allt Åre har att erbjuda inom promenadavstånd. Vi har ett brett urval av boenden för både kortare och längre vistelser, perfekt för dig, dina vänner eller familjen. Med oss kan du skapa en oförglömlig fjällsemester där kvalitetstid och aktivitet går hand i hand.",
    image: {
        src: styleGuideImage,
        alt: "Boende Åre"
    },
    buttons: [
        {
            text: "Boka Boende",
            link: "/style-guide",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "Stats",
    title: "Built for Speed and Flexibility",
    description: "Titan Core is designed with performance and developer experience in mind. Our lightweight theme gives you all the essentials without the bloat, letting you build exactly what you need with impressive speed.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Built for Speed and Flexibility",
        description: "Titan Core is designed with performance and developer experience in mind. Our lightweight theme gives you all the essentials without the bloat, letting you build exactly what you need with impressive speed.",
        button: {
            text: "Discover Titan Core",
            link: "/theme-info",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "Build Blocks",
    title: "Ready-to-Use Components",
    description: "Save development time with our pre-built, accessible components. Each one is designed to integrate seamlessly with your projects while maintaining excellent performance.",
    button: {
        text: "View All Components",
        link: "/components",
        variant: "primary" as const,
        target: "_self" as const
    }
};


const logosSection = {
    eyebrow: "Our Clients",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "Vanliga Frågor",
    title: 'FAQ',
    description: 'Du är välkommen a kontakta oss om du här ytterlig frågor .',
    faqs: faqLists.main.faqs
}

/* const heroMapSection = {
    options: AstroLeafletOptionsType.main.
} */

const recentPostsSection = {
    eyebrow: "LATEST INSIGHTS",
    title: " Learn From Our Experience",
    description: "Explore our latest articles on Astro JS development, theme customization tips, and web performance best practices.",
    button: {
            text: "View All Posts",
            link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <!-- <Hero content={heroContent} /> -->
    <SwiperHero content={swiperHeroContent} />
   
